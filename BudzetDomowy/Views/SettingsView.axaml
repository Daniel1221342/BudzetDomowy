<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:BudzetDomowy.ViewModels"
             x:Class="BudzetDomowy.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">
	<StackPanel Margin="20" Spacing="20">
		<TextBlock Text="Ustawienia Aplikacji" FontSize="24" FontWeight="Bold"/>

		<Border Padding="20" Background="#2E2E2E" CornerRadius="8" BoxShadow="0 4 8 0 #1A000000">
			<StackPanel Spacing="10">
				<TextBlock Text="Symbol waluty" FontWeight="SemiBold"/>
				<ComboBox ItemsSource="{Binding AvailableCurrencies}"
                          SelectedItem="{Binding Settings.CurrencySymbol, Mode=TwoWay}"/>
			</StackPanel>
		</Border>

		<Border Padding="20" Background="#2E2E2E" CornerRadius="8" BoxShadow="0 4 8 0 #1A000000">
			<StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
				<TextBlock Text="Włącz tryb jasny" VerticalAlignment="Center" FontWeight="SemiBold"/>
				<ToggleSwitch IsChecked="{Binding IsLightMode}" Command="{Binding ToggleThemeCommand}"/>
			</StackPanel>
		</Border>

	</StackPanel>
</UserControl>